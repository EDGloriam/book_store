%main.container
  #slider.carousel.slide{'data-ride': "carousel"}
    %ol.carousel-indicators
      %li.active{'data-target': "#slider", 'data-slide-to': "0"}
      %li{'data-target': "#slider", 'data-slide-to': "1"}
    .carousel-inner{role: "listbox"}
      .item.active
        .row
          .col-sm-5
            .general-img-wrap
              %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
          .col-sm-7
            .mb-60
              %h1 Real-Life Responsive Web Design
              %p.lead Smart front-end techniques and design patterns derived from real-life responsive projects
              %p.lead.small Vitaly Friedman, Daniel Mall,Vitaly Friedman
              .general-align
                %button.disabled.btn Buy Now
    %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
      %span.icon-prev{'aria-hidden': "true"}
      %span.sr-only Previous
    %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
      %span.icon-next{'aria-hidden': "true"}
      %span.sr-only Next
.container
  .jumbotron.text-center.mb-0
    %h2.h1 Welcome to our amazing Bookstore!
    .mb-res-50
      %p We pore through hundreds of new books each month and select the five best we can find to share with our members.
    = link_to('Get Started', books_path, class: 'btn btn-default')
  .mb-35
    %h3 Best Sellers
    .row
      - @books.each do |book|
        .col-sm-6.col-md-3
          .general-thumb-wrap
            / = render partial: 'thumbnail_with_links', object: book
            = render partial: '/shared/thumbnail_with_links', locals: {book: book}
          .mb-35
            .clearfix
              %p.pull-right.font-16.in-gold-500
                = book.price
              %p.title.mr-55
                = book.name
            %span.divider-sm
            %p.lead.small
              = prepare_for_view(book.authors)
