.item{class: "#{index.zero? ? 'active' : '' }"}
  .row
    .col-sm-5
      .general-img-wrap
        = image_tag book.photo, class: 'img, img-shadow, general-thumbnail-img', alt: "design-book"
    .col-sm-7
      .mb-60
        %h1
          = book.name
        %p.lead
          = book.description
        %p.lead.small
          = prepare_for_view(book.authors)
        .general-align
          = form_for @order_item  do |f|
            = f.text_field :book_id, hidden: true, name: "order_item[book_id]", value: "#{book.id}"
            = f.text_field :quantity, hidden: true, name: "order_item[quantity]", value: 1
            = f.button 'Buy Now', type: 'submit', class: 'btn btn-default'

