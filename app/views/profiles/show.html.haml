%main.container
  %h1.general-title-margin= t('settings.settings')
  %ul.nav.clearfix.mb-20{ role: 'tablist' }
    %li.tab-item.active{ role: 'presentation' }
      %a.tab-link{ href: '#address', 'aria-controls': 'address', role: 'tab', 'data-toggle': 'tab' }= t('settings.address')
    %li.tab-item{ role: 'presentation'}
      %a.tab-link{ href: '#privacy', 'aria-controls': 'privacy', role: 'tab', 'data-toggle': 'tab' }= t('settings.privacy')
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap{ role: 'tabpanel' }
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0= t('settings.billing')
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0= t('settings.shipping')
      .row
        .col-md-5.mb-40
          = render partial: 'form', locals: { obj: @billing_address}
        .col-md-5.col-md-offset-1.mb-25
          = render partial: 'form', locals: { obj: @shipping_address}
    #privacy.tab-pane.fade{role: 'tabpanel'}
      .row.mb-60
        .col-sm-5
          %p.in-gold-500.font-18.mb-25= t('settings.e_mail')
          %form.general-form-md
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: 'general-form-md') do |f|
            = f.password_field :password, hidden: true, name: 'user[password]', value: current_user.current_password
            .form-group.mb-35
              = f.label :email, t('settings.enter_e_mail'), class: 'control-label input-label'
              = f.email_field :email, autofocus: true, class: 'form-control', id: 'email', name:'user[email]', type: 'email'
            .general-text-align
              = f.submit t('settings.save'), class: 'btn btn-default mb-35'
        .col-sm-5.col-sm-offset-1
          %p.in-gold-500.font-18.mb-25 Password
          = form_for(:user, class: 'general-form-md divider-lg-bottom pb-25') do |f|
            .form-group.mb-30
              = f.label :password, t('settings.old_password'), class: 'control-label input-label'
              = f.password_field :password, id: 'oldPassword', class: 'form-control' , placeholder: t('settings.old_password'), name: 'user[old_password]', type: 'password'
            .form-group.mb-30
              = f.label :password, t('settings.new_password'), class: 'control-label input-label'
              = f.password_field :password, id: 'Password', class: 'form-control' , placeholder:t('settings.new_password'), name: 'user[password]', type: 'password'
            .form-group.mb-40
              = f.label :password, t('settings.confirm_password'), class: 'control-label input-label'
              = f.password_field :password, id: 'confirmPassword', class: 'form-control' , placeholder: t('settings.confirm_password'), name: 'user[confirm_password]', type: 'password'
            .general-text-align
              = f.submit 'Save', class: 'btn btn-default mb-10'
        .col-sm-12
          %p.in-gold-500.font-18.mb-25= t('settings.remove_account')
          %form
            .general-settings-btn
              = button_to t('settings.please_remove_account'), registration_path(current_user), class: 'btn mb-20', data: { confirm: t('settings.confirm_alert') }, method: :delete
            .form-group.checkbox.general-settings-checkbox
              %label.checkbox-label
                %input.checkbox-input{ type: 'checkbox', hidden: 'true' }
                %span.checkbox-icon
                  %i.fa.fa-check
                %span.checkbox-text= t('settings.im_agree_lost_all_data')
