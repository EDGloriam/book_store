<!DOCTYPE html>
%html
  %head
    %meta{charset: "UTF-8"}
    %meta{name: "viewport", content: "width=device-width"}
    %link{href: "https://fonts.googleapis.com/css?family=Open+Sans", rel: "stylesheet"}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Bookstore
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    / = console
    %header.navbar.navbar-default
      .container
        .navbar-header
          %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
            %span.sr-only
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand Bookstore
        = link_to  cart_path, class: "shop-link pull-right visible-xs" do
          %span.shop-icon
            %span.shop-quantity
              = books_in_cart
        = link_to  cart_path, class: "shop-link pull-right hidden-xs" do
          %span.shop-icon
            %span.shop-quantity
              = books_in_cart
        #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
          .visible-xs
            %button.close{type: "button", 'aria-label': "Close"}
              %span{'aria-hidden': "true"} &times;
            %ul.nav.navbar-nav
              %li
                =link_to('Home', root_path)
              %li
                %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"} Shop
                %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
                  %li
                    = link_to 'All', books_path(section: nil), class: 'collapse-link'
                  %li
                    = link_to 'Mobile Development', books_path(section: 'Mobile Development'), class: 'collapse-link'
                  %li
                    = link_to 'Photo', books_path(section: 'Photo'), class: 'collapse-link'
                  %li
                    = link_to 'Web Design', books_path(section: 'Web Design'), class: 'collapse-link'
          .hidden-xs
            %ul.nav.navbar-nav
              %li
                =link_to('Home', root_path)
              %li.dropdown
                %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} Shop
                %ul.dropdown-menu
                  %li
                    = link_to 'All', books_path(section: nil)
                  %li
                    = link_to 'Mobile Development', books_path(section: 'Mobile Development')
                  %li
                    = link_to 'Photo', books_path(section: 'Photo')
                  %li
                    = link_to 'Web Design', books_path(section: 'Web Design')
                - if user_signed_in?
                  %li.dropdown
                    %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} My account
                    %ul.dropdown-menu
                      %li
                        = link_to "Settings", settings_path
                      %li
                        = link_to "Orders", orders_path
                      %li.divider{role: "separator"}
                        %li
                          =link_to("Log out", destroy_user_session_path, method: :delete)
                - else
                  %li
                    = link_to("Sign up", new_user_registration_path, class: 'in-gold-500')
                  %li
                    = link_to("Log in",  new_user_session_path, class: 'in-gold-500')
    %h1.cart-text
    = render './layouts/flash'
    = yield
    %footer.navbar-inverse
      .container
        .row
          .col-sm-9
            %ul.list-inline.general-align.mb-25
              %li
                %a.nav-link{href: "#"} Home
              %li
                %a.nav-link{href: "#"} Shop
              -if user_signed_in?
                %li
                  = link_to "Orders", orders_path, class: 'nav-link'
                %li
                  = link_to "Settings",  settings_path, class: 'nav-link'
          .col-sm-3
            %p.general-nav-mail support@bookstore.com
            %p.general-nav-number (555)-555-5555
            %ul.list-inline.general-align
              %li
                %a.nav-link{href: "#"}
                  %i.fa.fa-facebook{'aria-hidden': "true"}
              %li
                %a.nav-link{href: "#"}
                  %i.fa.fa-twitter{'aria-hidden': "true"}
              %li
                %a.nav-link{href: "#"}
                  %i.fa.fa-google-plus{'aria-hidden': "true"}
              %li
                %a.nav-link{href: "#"}
                  %i.fa.fa-instagram{'aria-hidden': "true"}
    %script{src: "https://use.fontawesome.com/67602d7308.js"}
    / %script{src: "../../javascripts/jquery.js"}
    / %script{src: "../../javascripts/bootstrap.js"}
