%h1
%main.container
  %h1.general-title-margin Ð¡atalog
  .clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        %a.dropdown-toggle.lead.small{href: '#', 'data-toggle': 'dropdown', role: 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false'}
          = selected_menu_item(request.GET[:filter] || session[:filter])
          %i.fa.fa-angle-down.dropdown-icon.pull-right
        %ul.dropdown-menu
          %li
            = link_to 'Newest first', books_path(filter: 'newest_first')
          %li
            = link_to 'Popular first', books_path(filter: 'popular_first')
          %li
            = link_to 'Price: Low to hight', books_path(filter: "price:_Low_first")
          %li
            = link_to 'Price: Hight to low', books_path(filter: "price:_Hight_first")
    %ul.list-inline.pt-10.mb-25.mr-240
      - all_categories.each do |category|
        %li.mr-35
          = generate_link_for_category(category)
  .mb-120
    .row
      - @books.each do |book|
        .col-xs-6.col-sm-3
          .general-thumb-wrap
            = render partial: '/shared/thumbnail_with_links', locals: {book: book}
          .general-thumb-info
            %p.title
              = book.name
            %p.font-16.in-gold-500
              = add_currency_to(book.price)
              = book.category.name
            %span.divider-sm
            %p.lead.small
              = prepare_for_view(book.authors)
    .text-center
      = link_to_next_page @books, 'View More', class: 'btn btn-primary'
