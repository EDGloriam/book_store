%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign up
    %a.general-login-icon{href: "#"}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'general-form'}) do |f|
    = devise_error_messages!
    .form-group.mb-30
    = f.label :email, class: 'control-label input-label'
    = f.email_field :email, autofocus: true, id: 'email', class: 'form-control', name:"user[email]", type: "email", placeholder: "Enter Email"
    .form-group.mb-30
    = f.label :password, class: 'control-label input-label'
    = f.password_field :password, autocomplete: "off", id: 'user_password', class: 'form-control', name: "user[password]", type: "password", placeholder: "Password"
    .form-group.mb-30
    = f.label :password_confirmation, class: 'control-label input-label'
    = f.password_field :password_confirmation, autocomplete: "off", id: 'user_password_confirmation', class: 'form-control', name:"user[password_confirmation]", type: "password", placeholder: "Confirm password"
    .form-group.checkbox.text-center.mb-30
      - if devise_mapping.rememberable?
        = f.check_box :remember_me, type: "checkbox", hidden: "true"
        %span.checkbox-icon
          %i.fa.fa-check
        %span.checkbox-text Remember me
    .text-center
      = f.submit "Sign up", class: 'btn btn-default mb-20', value: 'Sign up'
    .text-center
      = link_to "Log in", new_session_path(resource_name), class: 'in-gold-500'