%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Log In
    = link_to user_facebook_omniauth_authorize_path do
      %i.fa.fa-facebook-official
    %p.general-login-text or
  = form_for(resource, as: resource_name, url: session_path(resource_name), method: :post, html: {class: 'general-form'}) do |f|
    .form-group.mb-30
    = f.label :email, value: 'Enter Email', class: 'control-label input-label'
    = f.email_field :email, autofocus: true, id: 'email', class: 'form-control', name:"user[email]", type: "email", placeholder: "Enter Email"
    .form-group.mb-30
    = f.label :password, value: 'Password', class: 'control-label input-label'
    = f.password_field :password, autocomplete: "off", id: 'password', class: 'form-control', name:"user[password]", type: "password", placeholder: "Password"
    = link_to "Forgot your password?", new_password_path(resource_name), class: 'help-block in-gold-500'
    .form-group.checkbox.text-center.mb-30
      - if devise_mapping.rememberable?
        = f.check_box :remember_me, type: "checkbox", hidden: "true"
        %span.checkbox-icon
          %i.fa.fa-check
        %span.checkbox-text Remember me
    .text-center
      = f.submit "Log in", class: 'btn btn-default mb-20', value: 'Back to Store'
  %p.general-sign-text.text-center
    Donâ€™t have an Account?
    = link_to "Sign up", new_registration_path(resource_name), class: 'in-gold-500'
