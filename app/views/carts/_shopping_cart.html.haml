- if !@order_item.nil? && @order_item.errors.any?
  .alert.alert-danger
    %ul
      - @order_item.errors.full_messages.each do |msg|
        %li
          = msg
.hidden-xs
  %table.table.table-hover
    %tr.no-hover
      %th.col-pic.pl-0
        %span.in-grey-600 Product
      %th.col-title
      %th.col-price
        %span.in-grey-600 Price
      %th.col-quantity
        %span.in-grey-600 Quantity
      %th.col-total
        %span.in-grey-600 SubTotal
      %th.col-close
    - if @order_items.size == 0
      %p.text-center
        There are no items in your shopping cart.  Please #{link_to "go back", :back} and add some items to your cart.
    - else
      - @order_items.each do |order_item|
        = render 'carts/cart_row', book: order_item.book, order_item: order_item, show_total: true, f: f
