%main.container.general-main-wrap
  %h1.general-title-margin= t('checkout_title')
  = progress_bar
  .row.mb-20
    .col-sm-3
      %h3.general-subtitle= t('.shipping')
      = address_short(@form_object.shipping_address)
    .col-sm-3
      %h3.general-subtitle= t('.billing')
      = address_short(@form_object.billing_address)
    .col-sm-3
      %h3.general-subtitle= t('.shipments')
      = shipment_short(@form_object.shipment)
    .col-sm-3
      %h3.general-subtitle= t('.payment')
      = credit_short(@form_object.payment)
  .divider-lg.pt-20
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600= t('.book')
          %th.col-method
          %th
            %span.in-grey-600= t('.price')
          %th
            %span.in-grey-600= t('.quantity')
          %th
            %span.in-grey-600= t('.total')
      %tbody
        - @order.order_items.each do |order_item|
          %tr
            %td
              .general-img-wrap-table
                %img.cart-img-shadow.pull-left{src: "#{order_item.book.photo}"}
            %td
              %p.title= order_item.book.name
              %p.in-grey-600.fw-300= order_item.book.description
            %td
              %span.font-16.in-gold-500= add_currency_to(order_item.unit_price)
            %td
              %span.ml-30= order_item.quantity
            %td
              %span.font-16.in-gold-500= add_currency_to(order_item.total_price)
  = render 'order_summary', order: @order
  .text-center
    = link_to t('.link.save'), wizard_path, method: 'patch', class: 'btn btn-default mb-20'
