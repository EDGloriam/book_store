%main.container.general-main-wrap
  %h1.general-title-margin Checkout
  = progress_bar
  .row.mb-20
    .col-sm-3
      %h3.general-subtitle Shipping Address
      = address_short(@form_object.shipping_address)
    .col-sm-3
      %h3.general-subtitle Billing Address
      = address_short(@form_object.billing_address)
    .col-sm-3
      %h3.general-subtitle Shipments
      = shipment_short(@form_object.shipment)
    .col-sm-3
      %h3.general-subtitle Payment Information
      = credit_short(@form_object.payment)
  .divider-lg.pt-20
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600 Book
          %th.col-method
          %th
            %span.in-grey-600 Price
          %th
            %span.in-grey-600 Quantity
          %th
            %span.in-grey-600 Total
      %tbody
        - @order.order_items.each do |order_item|
          %tr
            %td
              .general-img-wrap-table
                %img.cart-img-shadow.pull-left{src: "#{order_item.book.photo}"}
            %td
              %p.title= order_item.book.name
              %p.in-grey-600.fw-300= order_item.book.description
            %td
              %span.font-16.in-gold-500 &euro;#{order_item.unit_price}
            %td
              %span.ml-30= order_item.quantity
            %td
              %span.font-16.in-gold-500 &euro;#{order_item.total_price}
  = render 'order_summary', order: @order
  .text-center
    = link_to 'Place Order', wizard_path, method: 'patch', class: 'btn btn-default mb-20'
