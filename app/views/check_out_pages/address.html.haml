%main.container
  %h1.general-title-margin Checkout
  = progress_bar
  = form_for current_user, url: wizard_path, method: "patch", class: 'res-mb-100' do |form|
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle Billing Address
          %p.general-info-text all fields are required
        .col-md-5.col-md-offset-1
          %h3.general-subtitle Shipping Address
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle Billing Address
          %p.general-info-text all fields are required
        = render 'shared/addresses',  address_obj: @form.billing, f: form
      .col-md-5.col-md-offset-1.mb-60
        .visible-xs.visible-sm
          %h3.general-subtitle Shipping Address
        = render 'shared/addresses',  address_obj: @form.shipping, f: form
        .form-group.checkbox
          %label.checkbox-label
            %input.checkbox-input{type: "checkbox", hidden: "true"}
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text Use Billing Adress
    = render 'order_summary'
    .text-center
      = form.submit :save, class: 'btn btn-default mb-20', value: 'Save and Continue'



