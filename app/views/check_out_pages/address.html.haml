%main.container
  %h1.general-title-margin= t('checkout_title')
  = progress_bar
  = form_for current_user, url: wizard_path, method: 'patch', class: 'res-mb-100' do |f|
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle= t('.billing')
          %p.general-info-text= t('.required_fields')
        .col-md-5.col-md-offset-1
          %h3.general-subtitle= t('.shipping')
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle= t('.billing')
          %p.general-info-text= t('.required_fields')
        = f.fields_for :billing do |ff|
          = render 'shared/addresses',  address_obj: @form_object.billing, ff: ff
      .col-md-5.col-md-offset-1.mb-60
        .visible-xs.visible-sm
          %h3.general-subtitle= t('.shipping')
        = f.fields_for :shipping do |ff|
          = render 'shared/addresses',  address_obj: @form_object.shipping, ff: ff
        .form-group.checkbox
          = f.label :user_use_billing, class: 'checkbox-label' do
            = f.check_box :user_use_billing, class: 'checkbox-input', name: 'use_billing', type: 'checkbox', hidden: 'true', checked: false
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text= t('.use_billing')
    = render 'order_summary', order: @order
    .text-center
      = f.submit t('links.save_and_continue'), class: 'btn btn-default mb-20'
